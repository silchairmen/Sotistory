<?xml version="1.0" encoding="UTF-8" ?>

<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%green(%d{yyyy-MM-dd HH:mm:ss}) [%thread] %highlight(%-5level) %cyan(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>


    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/var/log/soti/application.log</file> <!--파일 저장 위치 지정-->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>/var/log/soti/application-%d{yyyy-MM-dd}-%i.log</fileNamePattern> <!--파일 이름 정책 설정-->
            <maxFileSize>50MB</maxFileSize> <!--파일 사이즈 설정-->
            <maxHistory>7</maxHistory> <!--파일 최대 갯수 설정-->
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern> <!--로그 내용 정책 설정-->
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="FILE" />
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
